# 应用配置
NODE_ENV=development
PORT=3000

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rwa_platform
REDIS_URL=redis://localhost:6379

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Web3Auth配置
WEB3AUTH_CLIENT_ID=your-web3auth-client-id
WEB3AUTH_VERIFIER_NAME=your-verifier-name

# 区块链RPC配置
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your-api-key
BASE_RPC_URL=https://mainnet.base.org
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key

# 数据源API配置
COINGECKO_API_KEY=your-coingecko-api-key
DEFILLAMA_API_URL=https://api.llama.fi
CHAINLINK_API_URL=https://api.chain.link

# 第三方服务配置
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# KYC服务配置
JUMIO_API_TOKEN=your-jumio-api-token
JUMIO_API_SECRET=your-jumio-api-secret
SUMSUB_APP_TOKEN=your-sumsub-app-token
SUMSUB_SECRET_KEY=your-sumsub-secret-key

# 合规检查配置
CHAINALYSIS_API_KEY=your-chainalysis-api-key
ELLIPTIC_API_KEY=your-elliptic-api-key

# 监控配置
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# 文件存储配置
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rwa-platform-assets

# 缓存配置
REDIS_TTL=3600
CACHE_PREFIX=rwa:

# 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS配置
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 特性开关
FEATURE_PORTFOLIO_SYNC=true
FEATURE_RISK_ALERTS=true
FEATURE_ADVANCED_ANALYTICS=false

# 外部API配置
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
MESSARI_API_KEY=your-messari-api-key
DUNE_API_KEY=your-dune-api-key

# 通知配置
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# 分析配置
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# 安全配置
ENCRYPTION_KEY=your-32-character-encryption-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
